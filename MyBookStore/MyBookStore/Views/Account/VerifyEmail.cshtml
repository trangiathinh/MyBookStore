
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Verify Account</title>
</head>
<body>
    <div class="bg-success text-white">

        @{
            if (ViewBag.Status)
            {
                <strong>Thành công!!!</strong>
                <span>@ViewBag.Message. Nhấn vào&nbsp;</span><a href="@Url.Action("Login","Account")">đây</a><span> để đăng nhập tài khoản!</span>
            }
            else
            {
                <strong>@ViewBag.Message</strong>
            }
        }
    </div>
</body>
</html>
